FROM node:18

WORKDIR /app
ENV NEXT_TELEMETRY_DISABLED 1
ENV NODE_ENV development

RUN apt-get update -y \
&& apt-get upgrade -y \
&& apt-get install curl zip libvips-dev libvips-tools -y \
&& rm -rf /var/lib/apt

COPY . /app

RUN yarn install

COPY  yarn.lock* ./
RUN yarn --frozen-lockfile;

COPY . .
RUN yarn build